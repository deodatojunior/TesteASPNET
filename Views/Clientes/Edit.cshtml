@model TesteASPNET.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Atualizar ou editar dados do cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CLI_ID" />
            <div class="form-group">
                <label asp-for="CLI_NOME" class="control-label">Nome do cliente</label>
                <input asp-for="CLI_NOME" class="form-control" />
                <span asp-validation-for="CLI_NOME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CLI_DATANASCIMENTO" class="control-label">Data de nascimento do cliente</label>
                <input asp-for="CLI_DATANASCIMENTO" class="form-control" />
                <span asp-validation-for="CLI_DATANASCIMENTO" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CLI_ATIVO" /> Ativo
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a listagem de clientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
